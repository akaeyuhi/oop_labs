<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="n"
            android:layout_width="65dp"
            android:layout_height="38dp" android:id="@+id/nText"
            app:layout_constraintEnd_toStartOf="@+id/editN"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.564"
            app:layout_constraintVertical_bias="0.228"/>
    <TextView
            android:text="min"
            android:layout_width="65dp"
            android:layout_height="38dp" android:id="@+id/minView"
            app:layout_constraintEnd_toStartOf="@+id/editMin"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/nText"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.558"
            app:layout_constraintVertical_bias="0.092"/>
    <TextView
            android:text="max"
            android:layout_width="65dp"
            android:layout_height="38dp" android:id="@+id/maxView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editMax"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|textPersonName"
            android:text="5"
            android:ems="10"
            android:id="@+id/editN"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editMin"
            app:layout_constraintVertical_bias="0.802"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|textPersonName"
            android:text="5"
            android:ems="10"
            android:id="@+id/editMin"
            app:layout_constraintBottom_toTopOf="@+id/editMax"
            android:layout_marginBottom="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|textPersonName"
            android:text="100"
            android:ems="10"
            android:id="@+id/editMax"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Submit"
            android:layout_width="154dp"
            android:layout_height="51dp" android:id="@+id/submitButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.892"/>
</androidx.constraintlayout.widget.ConstraintLayout>